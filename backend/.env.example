# Server Configuration
PORT=3001
NODE_ENV=development

# IOTA Configuration
IOTA_NODE_URL=https://api.testnet.iota.org
IOTA_FAUCET_URL=https://faucet.testnet.iota.org
IOTA_NETWORK=testnet
IOTA_EXPLORER_URL=https://explorer.iota.org

# Playground Wallet Configuration (Backend Only - Never expose to frontend!)
PLAYGROUND_WALLET_PRIVATE_KEY=your_playground_wallet_private_key_here

# Move Compiler Configuration
MOVE_COMPILER_PATH=/usr/local/bin/iota
COMPILER_WORKSPACE=/tmp/iota-playground

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info